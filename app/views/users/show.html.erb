<div>
  <h3>user info</h3>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <%= @user.name %>
  <%= @user.introduction %>
  <% if @user.id == current_user.id %>
    <p><%= link_to "User Info", edit_user_path(@user) %></p>
  <% end %>
</div>


<table>
  <thead>
    <tr>
      <td>Title</td>
      <td>Opinion</td>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>Title：<%= link_to book.title, book_path(book.id)%></td>
        <td>Opinion：<%= book.body %></td>
        <td>User：<%= link_to  book.user_id, user_path(book.user)%></td>
      </tr>
    <% end %>
  </tbody>
</table>
