    <% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>
<div class="container px-5 px-sm-0">
  <div class="row">
<div class="col-md-3" >
<%= render 'books/list', book: @book_show,user: @user %>
</div>
<div class="col-md-8 offset-md-1">
    <table>
     <h2>Book detail</h2>
    <table class="table table-hover table -inverse">
    <tr>
        <td><%= attachment_image_tag @user, :profile_image, size:'40x40', format: 'jpeg', fallback: "no_image.jpg" %>
        <%=link_to @book.user.name,user_path(@book.user) %></td>
        <td><%=link_to @book.title %></td>
         <td><% if @book.favorited_by?(current_user) %>
              <p>
                <%= link_to book_favorites_path(@book), method: :delete , class:"text-danger" do %>
                  ♥<%= @book.favorites.count %>
                <% end %>
              </p>
              <% else %>
              <p>
                <%= link_to book_favorites_path(@book), method: :post do %>
                  ♡<%= @book.favorites.count %>
                <% end %>
              </p>
            <% end %>
          </td>
        <td><%= @book.body %></td>
       <% if @book.user == current_user %>
        <td><%= link_to 'Edit', edit_book_path, class: "btn btn-sm btn-success" %></td>
        <td><%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-sm btn-danger" %></td>
      <% else %>
      <% end %>
      </tr>
    </table>

        <div>
        <p>コメント数：<%= @book.book_comments.count %></p>
        <% @book.book_comments.each do |book_comment| %>
         <div class="row">
          <p><%= attachment_image_tag @user, :profile_image, size:'40x40', format: 'jpeg', fallback: "no_image.jpg" %></p>
          <%= book_comment.user.name %>
         <%= book_comment.comment %>
          <% if book_comment.user == current_user %>
          <div>
            <td><%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger"  %></td>
          </div>
          <% end %>
          </div>
        <% end %>
        </div>

        <div>
        <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
          <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
        <div class="row　px-5 px-sm-0">
          <%= f.submit "送信" %>
        <% end %>
        </div>
    </div>
   </div>
 </div>



