<div>
  <p>コメント数：<%= book.book_comments.count %></p>
  <% book.book_comments.each do |book_comment| %>
    <div class="row">
      <p><%= attachment_image_tag user, :profile_image, size:'40x40', format: 'jpeg', fallback: "no_image.jpg" %></p>
      <%= book_comment.user.name %>
      <%= book_comment.comment %>
      <% if book_comment.user == current_user %>
        <div>
          <td>
            <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger", remote: true  %>
          </td>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

